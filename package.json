{
  "name": "swiss-driving-school-monorepo",
  "version": "1.0.0",
  "description": "Swiss Driving School - Full Stack Application with Admin Dashboard",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend:admin\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend:admin": "cd backend/admin && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:admin",
    "build:frontend": "cd frontend && npm run build",
    "build:admin": "cd backend/admin && npm run build",
    "start": "cd backend && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd admin && npm install",
    "clean": "rimraf node_modules frontend/node_modules backend/node_modules",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test",
    "deploy": "node deploy.js",
    "vercel:build": "cd frontend && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/swiss-driving-school.git"
  },
  "keywords": [
    "driving-school",
    "react",
    "node.js",
    "express",
    "mongodb",
    "admin-dashboard",
    "seo",
    "cms"
  ],
  "author": "Swiss Driving School",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "stripe": "^18.4.0"
  }
}
